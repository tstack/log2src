{
  "name": "log2src-ext",
  "displayName": "log2src",
  "description": "A debugger driven by logs",
  "version": "0.0.1",
  "author": {
    "name": "Tim Likarish Ellis"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.83.0",
    "node": "^7.9.0"
  },
  "categories": [
    "Debuggers"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ttiimm/log2src.git"
  },
  "bugs": {
    "url": "https://github.com/ttiimm/log2src/issues"
  },
  "activationEvents": [
    "onDebugResolve:log2src"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "log2src",
        "extensions": [
          ".log",
          "*.log.?"
        ],
        "aliases": [
          "Log2Src"
        ]
      }
    ],
    "grammars": [
      {
        "language": "log2src",
        "scopeName": "text.log",
        "path": "./syntaxes/log2src.tmLanguage.json"
      }
    ],
    "breakpoints": [
      {
        "language": "log2src"
      }
    ],
    "debuggers": [
      {
        "type": "log2src",
        "label": "log2src",
        "program": "./out/debugAdapter.js",
        "languages": [
          "log2src"
        ],
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "source",
              "log"
            ],
            "properties": {
              "source": {
                "type": "string",
                "description": "Absolute path to a source directory."
              },
              "log": {
                "type": "string",
                "description": "Absolute path to a log file"
              },
              "log_format": {
                "type": "string",
                "description": "A regex that describes the log format"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "log2src",
            "request": "launch",
            "name": "Launch: log2src",
            "source": "${workspaceFolder}/src/",
            "log": "${workspaceFolder}/log/*"
          }
        ],
        "configurationSnippets": [
          {
            "label": "log2src: Launch",
            "description": "The log2src run configuration for mapping logs to source files",
            "body": {
              "type": "log2src",
              "request": "launch",
              "name": "Launch: log2src",
              "source": "^\"\\${workspaceFolder}/...fillmein...\"",
              "log": "^\"\\${workspaceFolder}/log/*\""
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vscode/debugadapter": "^1.56.0",
    "@vscode/debugadapter-testsupport": "^1.56.0",
    "@vscode/debugprotocol": "^1.56.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.56.0",
    "typescript": "^5.2.2"
  }
}